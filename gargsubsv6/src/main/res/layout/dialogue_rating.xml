<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginHorizontal="24dp"
    android:background="@drawable/bg_layout_white_border_grey_corner_10"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_full_circle_white"
        android:src="@drawable/icon_cross"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/ratingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate us"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#4C4C4C"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/contactNumField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your valuable experience"
        android:textColor="#4C4C4C"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/ratingTxt"
        android:layout_alignParentStart="true"
        />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/customRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar"
        android:numStars="5"
        android:stepSize="0.5"
        android:elevation="6dp"
        android:progressBackgroundTint="#6D6D6D"
        android:progressTint="#FFC107"
        android:layout_alignParentStart="true"
        android:layout_below="@id/contactNumField"
        android:layout_marginTop="6dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:backgroundTint="#FF9800"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_roundborder_selected"
        android:layout_below="@id/customRatingBar"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"/>


</RelativeLayout>